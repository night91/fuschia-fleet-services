<div id="user-mails" class="hidden">
  <table class="table employment_table">
    <thead class="thead-dark">
    <tr>
      <th width="5%" scope="col">#</th>
      <th class="text-left" width="20%" scope="col">Date</th>
      <th class="text-left" width="70%" scope="col">Subject</th>
      <th width="5%" scope="col">Action</th>
    </tr>
    </thead>
    <tbody>
    <% @user_service.character_mails_list.each_with_index do |mail, index| %>
      <tr>
        <td>
          <%= index + 1 %>
        </td>
        <td class="text-left">
          <%= mail[:timestamp].to_date %>
        </td>
        <td class="text-left">
          <img src="https://imageserver.eveonline.com/Character/<%= mail[:from] %>_32.jpg" style="height: 32px; width: 32px;">
          <%= mail[:subject] %>
        </td>
        <td class="text-left">
          <%= link_to 'View', mail_path(mail[:mail_id]), class: 'btn btn-primary' %>
        </td>
      </tr>
    <% end  %>
    </tbody>
  </table>
</div>