      <% unless is_authenticated? %>
        <div class="col-sm-12 text-center join-us-btn">
          <%= simple_form_for :cpp_login, url: auth_cpplogin_path do |f| %>
            <%= f.button :submit, 'Join us', class: 'btn btn-lg btn-info' %>
          <% end %>
        </div>
      <% end %>
      <h2 class="col-sm-offset-2 col-sm-4">Welcome to Fuschia Fleet</h2>
