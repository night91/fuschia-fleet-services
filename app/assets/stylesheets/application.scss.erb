@import "bootstrap-sprockets";
@import "bootstrap";
@import "recruiting_mailing";
@import "welcome";

body {
    padding-top: 60px;
}

.col-centered{
    float: none;
    margin: 0 auto;
}

.cpplogin-btn {
    background-image: url('<%= asset_path("ssologin.png") %> ');
    width: 270px;
    height: 45px;
    margin-top: 4px;
    float: right;
}

.user-menu-container {
    float: right;
    margin-top: 8px;

    span.current-user-name {
        color: white;
        display: block;
        margin-top: 8px;
        font-weight: bold;
    }
}

.master-container {
    min-height: 450px;
}

.footer {
    padding: 70px 0;
    margin-top: 70px;
    border-top: 1px solid #e5e5e5;
    background-color: #f5f5f5;
}

.footer p {
    margin-bottom: 0;
    color: #777;
}

.footer-links {
    margin: 10px 0;
    padding: 0;
}

.footer-links li {
    display: inline;
    padding: 0 2px;
}

.footer-links li:first-child {
    padding-left: 0;
}