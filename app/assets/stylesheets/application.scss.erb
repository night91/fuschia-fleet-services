@import "colors";
@import "bootstrap-sprockets";
@import "bootstrap";
@import "recruiting_mailing";
@import "welcome";

body {
    background-image: url('<%= asset_path("bg_cyborg_blueish.jpg") %> ');
    background-attachment: fixed;
}

.col-centered{
    float: none;
    margin: 0 auto;
}

.cpplogin-btn {
    border-radius: 5px;
    border-color: $dark1;
    background-image: url('<%= asset_path("ssologin.png") %> ');
    width: 270px;
    height: 45px;
    margin-top: 4px;
    float: right;

    &:hover {
        background-image: linear-gradient( rgba(0, 0, 0, 0.2), rgba(0, 0, 0, 0.2) ), url('<%= asset_path("ssologin.png") %> ');
        border-color: $dark2;
    }
}

.navbar {
    background-color: $dark1;
    color: $white1;
}

.user-menu-container {
    float: right;
    margin-top: 8px;

    span.current-user-name {
        color: $white1;
        display: block;
        margin-top: 8px;
        font-weight: bold;
    }
}

.master-container {
    min-height: 450px;
    margin-top: 60px;
}

.bear-drinking-container {
    float: left;
    margin-top: -16px;
    padding-right: 10px;
}

.bear-drinking-container img {
    width: 50px;
    height: 50px;
}

.footer {
    padding: 70px 0;
    margin-top: 70px;
    border-top: 1px solid #e5e5e5;
    background-color: $dark1;
}

.footer p {
    margin-bottom: 0;
    color: $white1;
}

.footer-links {
    margin: 10px 0;
    padding: 0;
}

.footer-links li {
    display: inline;
    padding: 0 2px;
}

.footer-links li:first-child {
    padding-left: 0;
}


// Form Styles

.panel-primary {
    border-color: $dark2;

    & > .panel-heading {
        border-color: $dark2;
        background-color: $dark2;
    }
}

.panel-body {
    background-color: $white1;
}