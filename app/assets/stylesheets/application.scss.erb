@import "colors";
@import "bootstrap-sprockets";
@import "bootstrap";
@import "recruiting_mailing";
@import "welcome";
@import "reimbursement";
@import "user";
@import "mail";
@import "applications";

body {
    background-image: url('<%= asset_path("bg_cyborg_blueish.jpg") %> ');
    background-attachment: fixed;
}

.flash {
  margin-top: 55px;
}

.col-centered {
    float: none;
    margin: 0 auto;
}

.cpplogin-btn {
    border-radius: 5px;
    border-color: $dark1;
    background-image: url('<%= asset_path("ssologin.png") %> ');
    width: 270px;
    height: 45px;
    margin-top: 4px;
    float: right;

    &:hover {
        background-image: linear-gradient( rgba(0, 0, 0, 0.2), rgba(0, 0, 0, 0.2) ), url('<%= asset_path("ssologin.png") %> ');
        border-color: $dark2;
    }
}

.panel-container {
  background-color: $dark1;
  padding: 20px;
}

.user-menu-container {
  float: right;
  margin-top: 8px;

  a:hover {
    text-decoration: none;
  }

  span.current-user-name {
    color: $white1;
    display: block;
    margin-top: 4px;
    font-weight: bold;
    text-align: center;
    padding: 4px;

    &:hover {
      background-color: $dark2;
      border-radius: 4px;
    }
  }
}

.master-container {
  min-height: 450px;
  margin-top: 60px;
}

.bear-drinking-container {
  float: left;
  margin-top: -16px;
  padding-right: 10px;
}

.bear-drinking-container img {
  width: 50px;
  height: 50px;
}

.footer {
  padding: 70px 0;
  margin-top: 70px;
  border-top: 1px solid #e5e5e5;
  background-color: $dark1;
  z-index: 10;
  position: relative;
}

.footer p {
  margin-bottom: 0;
  color: $white1;
}

.footer-links {
  margin: 10px 0;
  padding: 0;
}

.footer-links li {
  display: inline;
  padding: 0 2px;
}

.footer-links li:first-child {
  padding-left: 0;
}

// General style

.action-link {
  margin-bottom: 10px;
}

.alert-error {
  background-color: #f2dede;
  border-color: #ebccd1;
  color: #a94442;
}

.fuschia_table {
  thead {
    color: $white1;
    th {
      text-align: center;

      &.text-left {
        text-align: left;
      }
    }
  }

  tbody {
    color: $white1;
    tr {
      text-align: center;

      &.text-left {
        text-align: left;
      }
    }
  }
}

// Bootstrap

.navbar {
    background-color: $dark1;
    color: $white1;
}

.btn-primary {
  background-color: $dark2;
  border-color: $dark2;
}

.btn-success {
  background-color: $green1;

  &:hover {
    border-color: $green1;
  }
}

.label-status {
  vertical-align: middle;
  font-weight: normal;
  display: block;
  padding: 6px 12px;
  margin-top: 2px;
}

.label-sm {
  font-size: 12px;
}

.label-md {
  font-size: 14px;
}

.label-lg {
  font-size: 20px;
}

.navbar-fixed-left {
  width: 130px;
  position: fixed;
  border-radius: 0;
  height: 100%;
  left: 0px;
}

// Form Styles

.panel-primary {
    border-color: $dark2;

    & > .panel-heading {
        border-color: $dark2;
        background-color: $dark2;
        color: $white1;
    }
}

.panel-body {
    background-color: $white1;
}